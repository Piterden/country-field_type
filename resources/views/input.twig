{{ asset_add('styles.css', 'anomaly.field_type.country::less/select2.less') }}
{{ asset_add('styles.css', 'anomaly.field_type.country::less/select2-bootstrap.less') }}

<select
        class="form-control"
        name="{{ field_type.input_name }}"
        {{ field_type.required ? 'required' }}>

    {% if not field_type.required %}
        <option>{{ trans(field_type.placeholder) }}</option>
    {% endif %}

    {% for iso, name in field_type.options %}
        <option value="{{ iso }}" {{ iso == field_type.value ? 'selected' }}>{{ trans(name) }}</option>
    {% endfor %}

</select>
